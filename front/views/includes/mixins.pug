//- Header
mixin header
  section.hero
    .hero-body
      .container
        +left-wrapper(message, subtitle)
        .right-wrapper
          ul.navigation
            +link('About', '👨🏼‍🎨', '/about')
            +link('Generator', '🤖', '/')
            +link('API', '💪🏻', '/docs')
            li
              +github-button('https://github.com/thomasfaller/node-express-vegan-ipsum-api')


//- Navigation links
mixin link(title, emoji, url)
  li.navigation-link
    a(href=url, class=active == title ? 'active' : '')= `${title} ${emoji}`


//- Title and subtitle container displayed on the left hand side of the Header
mixin left-wrapper(title, subtitle)
  .left-wrapper
    h1.title= message
    h2.subtitle= subtitle


//- Github button link for the navigation
mixin github-button(url)
  a.button.is-small(href=url, target='_blank' rel='noopener noreferrer')
    span.icon.is-small
      i.fab.fa-github
    span GitHub


//- Popup notification
mixin popup(text)
  #popup.container.is-fluid
    .notification
      .has-text-centered text


//- Footer
mixin footer
  footer.footer
    .content.has-text-centered
      p
        strong VeganIpsum
        |  by
        a(href='https://github.com/thomasfaller')  Thomas Faller
        | . The source code is licensed
        a(href='http://opensource.org/licenses/mit-license.php')  MIT
        | .
    .content.has-text-centered
      p
        | Powered by
        |
        a(href="https://nodejs.org/en/", title="NodeJS") NodeJS
        | ,
        |
        a(href="http://expressjs.com", title="ExpressJS") ExpressJS
        | ,
        |
        a(href="https://pugjs.org", title="PugJS") Pug
        |
        | and
        |
        a(href="https://bulma.io" title="Bulma") Bulma.
